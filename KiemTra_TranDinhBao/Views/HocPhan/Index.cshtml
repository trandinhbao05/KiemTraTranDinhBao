@model IEnumerable<KiemTra_TranDinhBao.Models.HocPhan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> DANH SÁCH HỌC PHẦN</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã Học Phần </th>
        <th> Tên Học Phần </th>
        <th> Số Tín Chỉ </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaHP)</td>
            <td>@Html.DisplayFor(modelItem => item.TenHP)</td>
            <td>@Html.DisplayFor(modelItem => item.SoTinChi)</td>
            <td>
                @Html.ActionLink("Đăng ký", "Dangki", new { id = item.MaHP })
            </td>
        </tr>
    }
</table>
